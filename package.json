{
  "name": "shop-house",
  "version": "1.0.0",
  "description": "Web app for selling home products",
  "main": "index.js",
  "scripts": {
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "watch:sass": "sass src/sass/main.scss src/css/style.css -w --no-source-map",
    "build:sass": "sass src/sass/main.scss src/css/style.build.css -w --no-source-map --style compressed",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' src/css/style.css -o css/style.build.css",
    "update:sprite": "svg-sprite -s --symbol-dest resources/icons --symbol-sprite sprite.svg resources/icons/*.svg"
  },
  "author": "Hoang",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "firebase": "^9.6.7",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "sass": "^1.47.0",
    "svg-sprite": "^1.5.3"
  }
}
